<?xml version="1.0" encoding="UTF-8"?>
<!-- https://www.xbmc-kodi.cz/prispevek-estuary-easy?page=22 -->
<window type="dialog" id="1190"><!-- mod -->
    <include>Animation_DialogPopupOpenClose</include>
    <controls>
        <control type="group">
            <centerleft>50%</centerleft>
            <width>600</width> <!-- posun okna vodorovně -->
            <centertop>50%</centertop>
            <height>900</height> <!-- posun okna svisle -->
			<include content="DialogBackgroundCommons">
				<param name="DialogBackgroundWidth" value="600" />
				<param name="DialogBackgroundHeight" value="900" />
				<param name="DialogHeaderWidth" value="480" />
				<param name="DialogHeaderLabel" value="Help" />
				<param name="DialogHeaderId" value="2" />
				<param name="CloseButtonLeft" value="480" />
			</include>
            <control type="group">
                <left>0</left>
                <top>90</top>
                <width>600</width>
                <height>600</height>
                <control type="grouplist">
                    <left>50</left>
                    <orientation>vertical</orientation>
					<control type="label">
                        <height>30</height>
                        <label>1 - Domů</label>
						<visible>!VideoPlayer.IsFullscreen</visible>
                    </control>
					<control type="label">
                        <height>30</height>
                        <label>6 - Restart Kodi</label>
                    </control>
					<control type="label"><!-- Screenshot -->
                        <height>60</height>
                        <label>9 - Snímek obrazovky</label>
						<visible>true</visible>
                    </control>
					<control type="label"><!-- play -->
                        <height>30</height>
						<textcolor>gray</textcolor>
                        <label>Play</label>
						<visible>VideoPlayer.IsFullscreen</visible>
                    </control>
                    <control type="label">
                        <height>30</height>
						<textcolor>blue</textcolor>
                        <label>TV Guide</label>
						<visible>Pvr.IsPlayingTv</visible>
                    </control>
                    <control type="label">
                        <height>30</height>
                        <label>Shift+Left - Player Debug</label>
						<visible>VideoPlayer.IsFullscreen</visible>
                    </control>	
                    <control type="label">
                        <height>30</height>
                        <label>Shift+Down - Subtitles On/Off</label>
						<visible>VideoPlayer.IsFullscreen + !VideoPlayer.HasEpg</visible>
                    </control>
					<control type="label">
                        <height>30</height>
                        <label>Shift+Right - Player Process Info</label>
						<visible>VideoPlayer.IsFullscreen</visible>
                    </control>
					<control type="label">
                        <height>60</height>
                        <label></label>
						<visible>VideoPlayer.IsFullscreen</visible>
                    </control>
					<control type="label"><!-- debug -->
                        <height>30</height>
						<textcolor>gray</textcolor>
                        <label>Debug</label>
                    </control>
					<control type="label">
                        <height>30</height>
                        <label>Shift+Up - Reload Skin</label>
                    </control>
					<control type="label">
                        <height>30</height>
                        <label>Shift+Right - Player Process Info</label>
                    </control>
                    <control type="label">
                        <height>30</height>
						<textcolor>red</textcolor>
                        <label>takescreenshot</label>
                    </control>
					<control type="label">
                        <height>30</height>
						<textcolor>yellow</textcolor>
                        <label>Skin Toogle Debug</label>
                    </control>
					
                    
                </control>
            </control>
        </control>
    </controls>
</window>