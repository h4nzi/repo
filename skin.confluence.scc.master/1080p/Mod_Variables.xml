<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- VARIABLES -->
		<variable name="SkinSettingOSDAutoCloseTime"> <!-- mod OSD -->
			<value condition="!String.IsEmpty(Skin.String(OSDAutoCloseTime))">$INFO[Skin.String(OSDAutoCloseTime)]</value>
			<value condition="String.IsEmpty(Skin.String(OSDAutoCloseTime))">4</value> <!-- Default value -->
		</variable>
		<variable name="VideoHWDecoder">
			<value condition="Player.Process(videohwdecoder)">HW</value>
			<value>SW</value>
		</variable>
		<variable name="videohdr">
			<value condition="String.Contains(ListItem.HdrType,hdr)">hdr10</value>
			<value condition="String.Contains(ListItem.HdrType,dolbyvision)">dolbyvision</value>
			<value condition="String.Contains(ListItem.HdrType,dvhe)">dolbyvision</value>
			<value condition="String.Contains(ListItem.HdrType,hlg)">hlg</value>
			<value>$INFO[ListItem.HdrType]</value>
		</variable>
		<variable name="SkinSettingHomeItemsLabel2Var">
			<value condition="Skin.HasSetting(set1)">Menu 1</value>
			<value condition="Skin.HasSetting(set2)">Menu 2</value>
			<value condition="Skin.HasSetting(set3)">Menu 3</value>
			<value>Default Menu</value>
		</variable>
		<variable name="EpgGenreVar">
			<value condition="!Skin.HasSetting(standard_PVRGenres)">epg-genres/$INFO[ListItem.Property(GenreType)].png</value>
			<value condition="Skin.HasSetting(standard_PVRGenres)">epg-genres/0.png</value>
		</variable>
		<variable name="PVRInfoPanelDateDurationLabel">
			<value condition="!String.IsEmpty(ListItem.StartDate) + !String.IsEmpty(ListItem.StartTime)">$INFO[ListItem.StartDate,[COLOR grey]$LOCALIZE[552]:[/COLOR] ,[CR]]$INFO[ListItem.StartTime,[COLOR grey]$LOCALIZE[555]:[/COLOR] ,[CR]]$INFO[ListItem.Duration,[COLOR grey]$LOCALIZE[180]:[/COLOR] ]</value>
			<value>$INFO[ListItem.Date,[COLOR grey]$LOCALIZE[552]:[/COLOR] ,[CR]]$INFO[ListItem.Duration,[COLOR grey]$LOCALIZE[180]:[/COLOR] ]</value>
		</variable>
		<variable name="ChannelListEPGIconVar">
			<value condition="!String.IsEmpty(Listitem.EpgEventIcon)">$INFO[ListItem.EpgEventIcon]</value>
			<value>$INFO[ListItem.Icon]</value>
		</variable>
		<variable name="LookIdentificationLabel2Var">
			<value condition="Skin.HasSetting(default)">Vzhled Confluence (default)</value>
			<value condition="Skin.HasSetting(estuary_look)">Vzhled Estuary</value>
			<value>Default</value>
		</variable>
		<variable name="PVRNextProgrammeLabel">
			<value condition="!String.IsEmpty(ListItem.NextStartTime) + !String.IsEmpty(ListItem.NextTitle)">[COLOR grey]$LOCALIZE[19031]:[/COLOR] $INFO[ListItem.NextStartTime]: $INFO[ListItem.NextTitle]</value>
			<value condition="!String.IsEmpty(ListItem.NextTitle)">[COLOR grey]$LOCALIZE[19031]:[/COLOR] $INFO[ListItem.NextTitle]</value>
		</variable>
		<variable name="SeasonEpisodeLabel">
			<value condition="String.IsEmpty(ListItem.EpisodeName)">$INFO[ListItem.Season,S]$INFO[ListItem.Episode,E]</value>
			<value>$INFO[ListItem.Season,S]$INFO[ListItem.Episode,E,: ]</value>
		</variable>
		<!-- <variable name="Search"> -->
			<!-- <value condition="!Player.HasVideo">9020</value> -->
			<!-- <value>601</value> -->
		<!-- </variable> -->
		<variable name="BackgroundDynamic">
			<value condition="Window.IsActive(games)">special://skin/media/textures/games.jpg</value>
			<value condition="Window.IsActive(pictures)">special://skin/media/textures/pictures.jpg</value>
			<value condition="Window.IsActive(radiochannels)">special://skin/media/textures/radio.jpg</value>
			<value condition="Window.IsActive(tvchannels)">special://skin/media/textures/tv.jpg</value>
			<value condition="Window.IsActive(favouritesbrowser)">special://skin/media/textures/favourites.jpg</value>
			<value condition="Window.IsActive(videos)">special://skin/media/textures/movie.jpg</value>
			<value condition="Window.IsActive(music)">special://skin/media/textures/music.jpg</value>
			<value condition="Window.IsActive(programs)">special://skin/media/textures/puzzle1.jpg</value>
			<value condition="Window.IsActive(addonbrowser)">special://skin/media/textures/addonbrowser.jpg</value>
			<value condition="Window.IsActive(settings)">special://skin/media/textures/system.jpg</value>
			<value condition="Window.IsActive(skinsettings)">special://skin/media/textures/system.jpg</value>
		</variable>
</includes>