<?xml version="1.0" encoding="UTF-8"?>

<includes>

	<include name="Calendar">
		<control type="group">
			<description>Birthday and Holidays</description>
			<right>10</right>
			<top>55</top>
			<width>20</width>
			<height>50</height>
			<animation effect="slide" start="0,0" end="0,25" time="75" condition="Skin.HasSetting(InfoboxOn)">conditional</animation>
			<visible>Skin.HasSetting(HolidaysOn)</visible>
				<control type="label">
						<description>Holidays</description>
						<right>4</right>
						<top>15</top>
						<width>400</width>
						<align>right</align>
						<aligny>center</aligny>
						<font>font12</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<scroll>true</scroll>
						<label>Jmeniny slaví [B][COLOR orange]$INFO[Window(Home).Property(name_day)][/COLOR][/B]</label>
						<visible>System.AddonIsEnabled(service.holidays)|System.AddonIsEnabled(script.calendar)</visible>
					</control>
					<control type="label">
						<description>Holidays</description>
						<right>305</right>
						<top>-100</top>
						<width>525</width>
						<align>right</align>
						<aligny>center</aligny>
						<font>font12</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<scroll>true</scroll>
						<label>[B][COLOR red]$INFO[Window(Home).Property(Státní svátek)][/COLOR][/B]</label>
						<!-- <label>Velmi dlouhý státní svátek</label> -->
						<visible>String.IsEqual(Window(Home).Property(public_holiday), True) + [System.AddonIsEnabled(service.holidays)|System.AddonIsEnabled(script.calendar)]</visible>
						<!-- <visible>true</visible> -->
					</control>
					<control type="label">
						<description>birthday</description>
						<right>4</right>
						<top>60</top>
						<width>375</width>
						<align>right</align>
						<aligny>center</aligny>
						<font>font12</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<label>Narozeniny slaví [B][COLOR orange]$INFO[Window(Home).Property(Birthday)][/COLOR][/B]</label>
						<visible>!String.IsEmpty(Window(Home).Property(Birthday)) + [System.AddonIsEnabled(service.birthdays.reminder) | System.AddonIsEnabled(script.calendar)]</visible>
						<!-- <visible>true</visible> -->
					</control>
				</control>
		<control type="group">
			<description>Day and Date</description>
			<right>170</right>
			<top>35</top>
			<width>20</width>
			<height>75</height>
			<visible>Skin.HasSetting(DatumOn)</visible>
			<animation effect="slide" start="0,0" end="0,-30" time="75" condition="!Skin.HasSetting(InfoboxOn)">conditional</animation>
			<control type="label">
					<description>Date label datum</description>
					<right>4</right>
					<top>2</top>
					<width>150</width>
					<align>right</align>
					<font>font12</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[System.Date(d. MMM)]</label>
					<include>Window_OpenClose_Animation</include>
					<animation effect="slide" start="0,0" end="-40,0" time="75" condition="Player.Muted">conditional</animation>
				</control>
				<control type="label">
					<description>Day label den</description>
					<right>4</right>
					<top>26</top>
					<width>150</width>
					<align>right</align>
					<font>font12</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$INFO[System.Date(DDD)]</label>
					<include>Window_OpenClose_Animation</include>
					<animation effect="slide" start="0,0" end="-40,0" time="75" condition="Player.Muted">conditional</animation>
				</control>
			</control>
		<control type="grouplist">
					<description>weather</description>
					<right>10</right>
					<top>55</top>
					<width>200</width>
					<height>60</height>
					<align>right</align>
					<itemgap>0</itemgap>
					<orientation>horizontal</orientation>
					<!-- <visible>Skin.HasSetting(homepageWeatherinfo) + !String.IsEmpty(Weather.Plugin) + String.IsEmpty(Window(Home).Property(Birthday))</visible> -->
					<visible>Skin.HasSetting(homepageWeatherinfo) + !String.IsEmpty(Weather.Plugin)</visible>
					<include>AdvancedSettingsAnimation</include> <!-- mod_include-->
					<control type="label">
						<description>Temp label</description>
						<width>auto</width>
						<font>font10</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<label>Out  </label>
						<visible>Skin.HasSetting(LocalTemperatureOn) + !String.IsEmpty(Weather.Plugin)</visible>
					</control>
					<control type="label">
						<description>Temp label</description>
						<top>10</top>
						<width>auto</width>
						<aligny>center</aligny>
						<font>font16</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<label>$INFO[Window(Weather).Property(Current.Temperature)]</label>
						<visible>!Skin.HasSetting(LocalTemperatureOn) + !String.IsEmpty(Weather.Plugin)</visible>
					</control>
					<control type="label">
						<description>Temp label</description>
						<top>10</top>
						<width>auto</width>
						<aligny>center</aligny>
						<font>font16</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<label>$INFO[Window(Home).Property(outsidetemp)]</label>
						<visible>Skin.HasSetting(LocalTemperatureOn) + !String.IsEmpty(Weather.Plugin)</visible>
					</control>
					<control type="label">					
						<description>Temp Units</description>
						<width>auto</width>
						<font>font10</font>
						<label>$INFO[System.TemperatureUnits] </label>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
					</control>
					<control type="image">
						<description>Weather image</description>
						<width>50</width>
						<height>50</height>
						<aspectratio aligny="center" align="center">keep</aspectratio>
						<texture>$INFO[Weather.ConditionsIcon]</texture>
					</control>
			</control>
	</include>
</includes>