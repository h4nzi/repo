            <visible>$EXP[epg_event_live]</visible>
            <left>6</left>
            <top>30</top>
            <width>50</width>
            <height>50</height>
            <aspectratio>keep</aspectratio>
            <texture>textures/flags/pvr/live.png</texture>
        </control>
	</include>
	<expression name="epg_event_live">String.Contains(ListItem.Plot,Přímý přenos) | String.Contains(ListItem.Plot,Priamy prenos) | String.Contains(ListItem.Genre,živě)</expression>
</includes>